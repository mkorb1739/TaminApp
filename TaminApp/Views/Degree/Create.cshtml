@model TaminApp.ViewModels.Degree.DegreeCreateViewModel  ;

@{
    ViewData["Title"] = "ایجاد مدرک تحصیلی جدید";
}

<h3>ایجاد مدرک تحصیلی جدید</h3>

<form asp-action="Create" method="post">
    <div class="mb-3 row">
        <label asp-for="DegreeName" class="col-sm-2 col-form-label">نام مدرک تحصیلی</label>
        <div class="col-sm-10">
            <input asp-for="DegreeName" class="form-control" />
            <span asp-validation-for="DegreeName" class="text-bg-info"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">ایجاد</button>
            <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
