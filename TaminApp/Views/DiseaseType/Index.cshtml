@model IEnumerable<TaminApp.ViewModels.DiseaseType.DiseaseTypeListViewModel >

<h2>نام بیماری </h2>

<a href="@Url.Action("Create", "DiseaseType")" class="btn btn-primary">جدید</a>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>عنوان</th>
            <th>وضعیت</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DiseaseName </td>
                <td>@(item.IsActive ? "فعال" : "غیرفعال")</td>
                <td>
                    <a href="@Url.Action("Edit", "DiseaseType", new { id = item.ID   })" class="btn btn-warning">ویرایش</a>
                    <a href="@Url.Action("Delete", "DiseaseType", new { id = item.ID })" class="btn btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>

